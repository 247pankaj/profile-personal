doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Projects - Pankaj Yadav
    link(rel='icon', type='image/x-icon', href='assets/favicon.ico')
    include includes/css.pug

  body.d-flex.flex-column.h-100.bg-light
    main.flex-shrink-0
      include includes/navbar.pug

      section.py-5
        .container.px-5.mb-5
          .text-center.mb-5
            h1.display-5.fw-bolder.mb-0
              span.text-gradient.d-inline Projects

          //- Project data
          -
            var projects = [
              {
                title: 'EstateRAG Assistant',
                description: 'A GenAI-powered assistant for analyzing property documents, comparing lease agreements, and enabling intelligent Q&A across real estate records.',
                details: 'Built an advanced RAG pipeline for document analysis using FastAPI, Streamlit, and vector databases. Implemented document chunking, semantic search, and multi-document comparison. Features include query rewriting, context condensation, and caching strategies for optimized performance.',
                tech: ['FastAPI', 'Streamlit', 'LangChain', 'OpenAI API', 'FAISS', 'PyMuPDF', 'Docker'],
                image: 'https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80',
                alt: 'EstateRAG Assistant',
                link: '#'
              },
              {
                title: 'CheckNet United',
                description: 'A full-stack B2B e-commerce portal for custom RFID tag orders by retailers.',
                details: 'Built with Angular and .NET 9 microservices, integrated with RabbitMQ, SignalR, and PostgreSQL. Implemented JWT-based auth, real-time import status updates, and Azure containerized deployments using Docker and CI/CD pipelines.',
                tech: ['Angular', '.NET 9', 'RabbitMQ', 'SignalR', 'PostgreSQL', 'Azure', 'Docker'],
                image: 'https://www.airport-suppliers.com/wp-content/uploads/2023/07/checkpoint.png',
                alt: 'CheckNet United Logo',
                link: '#'
              },
              {
                title: 'NHS HCD and IFR Systems',
                description: 'Unified NHS clinical funding platform used by over 130 NHS Trusts.',
                details: 'Led end-to-end development of Blueteq\'s IFR, High Cost Drugs, and Shared Care modules. Delivered workflow digitization, NICE compliance automation, and real-time reporting. Supported Â£100M+ in annual approvals.',
                tech: ['ASP.NET MVC', 'SQL Server', 'jQuery', 'NHS Spine Integration'],
                image: 'https://blueteq.com/wp-content/uploads/2024/02/Large_Blueteq_logo.webp',
                alt: 'Blueteq NHS System',
                link: '#'
              }
            ];

          .row.gy-5
            each project in projects
              .col-12
                .card.border-0.shadow-lg.rounded-4.overflow-hidden
                  .row.g-0.flex-column.flex-md-row.align-items-stretch
                    // Text Block
                    .col-md-7.p-4.p-md-5.bg-white
                      h3.fw-bold.text-primary.mb-2= project.title
                      p.text-muted.mb-2.fst-italic= project.description
                      p.mb-3= project.details

                      if project.tech.length
                        .mb-3
                          span.fw-semibold.text-secondary Tech Stack:
                          ul.list-inline.mt-1.mb-0
                            each t in project.tech
                              li.list-inline-item.badge.bg-light.text-dark.border.border-1.rounded-pill.px-3.py-1.mx-1.mb-1= t

                      if project.link && project.link !== '#'
                        a.btn.btn-outline-primary.mt-3(href=project.link target='_blank') View Project

                    // Image Block
                    .col-md-5.bg-light.text-center.d-flex.align-items-center.justify-content-center
                      img.img-fluid.p-4(src=project.image, alt=project.alt, style='max-height: 250px; object-fit: contain;')

      section.py-5.bg-gradient-primary-to-secondary.text-white
        .container.px-5.my-5
          .text-center
            h2.display-4.fw-bolder.mb-4 Let's build something together
            a.btn.btn-outline-light.btn-lg.px-5.py-3.fs-6.fw-bolder(href='contact.html') Contact me

    include includes/footer.pug
    include includes/scripts.pug