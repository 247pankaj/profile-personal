doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='Resume of Pankaj Yadav – Senior Software Developer with expertise in .NET, Azure, AI/ML, and modern web development.')
    meta(name='author', content='Pankaj Yadav')
    title Pankaj Yadav - Resume
    link(rel='icon', type='image/x-icon', href='assets/favicon.ico')
    include includes/css.pug

  body.d-flex.flex-column.h-100.bg-light
    main.flex-shrink-0
      // Navigation
      include includes/navbar.pug

      // Page Header
      .container.px-5.my-5
        .text-center.mb-5
          h1.display-4.fw-bold.text-gradient Resume
          p.text-muted.lead.mb-4 A blend of software engineering, AI/ML, and cloud expertise.
          a.btn.btn-primary.btn-lg.shadow(href='assets/Pankaj_Yadav_CV.pdf', target='_blank')
            i.bi.bi-download.me-2
            | Download PDF

      // ==========================
      // Skills Section
      // ==========================
      .container.px-5.mb-5
        .card.shadow-lg.border-0.rounded-4
          .card-body.p-5
            .row.gx-5
              // Core Skills
              .col-md-6.mb-5
                .d-flex.align-items-center.mb-4
                  i.bi.bi-tools.text-primary.fs-3.me-3
                  h3.fw-bolder.mb-0 Core Skills & Technologies
                ul.list-unstyled.ms-2
                  li.mb-2 AI-Driven Development, RAG, Vector DB
                  li.mb-2 .NET, C#, ASP.NET Core, MVC, Razor Pages
                  li.mb-2 Angular 19, TypeScript, Kendo UI, AG Grid
                  li.mb-2 EF Core, REST API Development

              // Cloud & DevOps
              .col-md-6.mb-5
                .d-flex.align-items-center.mb-4
                  i.bi.bi-cloud-check.text-primary.fs-3.me-3
                  h3.fw-bolder.mb-0 Cloud & DevOps
                ul.list-unstyled.ms-2
                  li.mb-2 Microsoft Azure (App Services, Functions, Key Vault)
                  li.mb-2 Azure DevOps (CI/CD), Docker, Git, Repos
                  li.mb-2 Agile (Scrum), Microservices, TDD
                  li.mb-2 SignalR, RabbitMQ

            // Python & AI
            .mb-5
              .d-flex.align-items-center.mb-4
                i.bi.bi-cpu.text-primary.fs-3.me-3
                h3.fw-bolder.mb-0 AI, ML & Data Science
              ul.list-unstyled.ms-2
                li.mb-2 Python, Pandas, Matplotlib, SQL
                li.mb-2 Deep Learning (RNN, CNN, LSTM, GRU)
                li.mb-2 NLP & LLMs
                li.mb-2 GenAI (OpenAI, Gemini, Claude)

            // Languages
            .mb-0
              .d-flex.align-items-center.mb-4
                i.bi.bi-code-slash.text-primary.fs-3.me-3
                h3.fw-bolder.mb-0 Languages
              .row.g-3
                each lang in ['C#','Python','TypeScript','SQL','JavaScript','HTML / CSS']
                  .col-6.col-md-4
                    .d-flex.align-items-center.justify-content-center.bg-light.rounded-4.p-3.h-100.shadow-sm #{lang}

      // ==========================
      // Experience Section
      // ==========================
      .container.px-5.mb-5
        h2.text-primary.fw-bolder.mb-4.text-center Professional Experience

        each exp in experiences
          .card.shadow-lg.border-0.rounded-4.mb-4
            .card-body.p-4.p-md-5
              .row.gx-5.align-items-center
                // Left column (logo + meta)
                .col-md-3.text-center.text-md-start.mb-4.mb-md-0
                  //- img.img-fluid.mb-3.rounded-3(
                  //-   src=exp.logo || 'assets/company-placeholder.png',
                  //-   alt=`${exp.company} logo`
                  //- )
                  .fw-bold.text-primary #{exp.date}
                  .small.text-dark.mt-2 #{exp.role}
                  .small.text-muted #{exp.company}
                  .small.text-muted #{exp.location}
                // Right column (description)
                .col-md-9
                  ul.mb-0.ps-3
                    each d in exp.desc
                      li.mb-2= d

      // ==========================
      // Education Section
      // ==========================
      .container.px-5.mb-5
        h2.text-secondary.fw-bolder.mb-4.text-center Education

        // MSc
        .card.shadow-lg.border-0.rounded-4.mb-4
          .card-body.p-4.p-md-5
            .row.gx-5.align-items-center
              .col-md-3.text-center.text-md-start.mb-4.mb-md-0
                //- img.img-fluid.mb-3.rounded-3(src='assets/herts.png', alt='University of Hertfordshire')
                .fw-bold.text-secondary 2019 – 2021
                .small.fw-bolder University of Hertfordshire
                .small.text-muted United Kingdom
              .col-md-9
                h5.fw-bold.mb-2 Master of Science (MS), Data Science and Analytics — Distinction
                p.mb-2 Focused on Artificial Intelligence, Data Engineering, Machine Learning, and Advanced Analytics.
                b Key Skills:
                |  Python, Pandas, SQL, Deep Learning, Agile Project Management

        // BE
        .card.shadow-lg.border-0.rounded-4.mb-4
          .card-body.p-4.p-md-5
            .row.gx-5.align-items-center
              .col-md-3.text-center.text-md-start.mb-4.mb-md-0
                //- img.img-fluid.mb-3.rounded-3(src='assets/mumbai.png', alt='University of Mumbai')
                .fw-bold.text-secondary 2009 – 2013
                .small.fw-bolder University of Mumbai
                .small.text-muted India
              .col-md-9
                h5.fw-bold.mb-2 Bachelor of Engineering (BE), Computer Science — First Class
                p.mb-2 Specialized in Computer Science fundamentals, algorithms, and system design.
                b Key Skills:
                |  SDLC, OOP, DBMS, SQL, Data Structures, Web Tech (HTML, CSS, JS), Matlab

    // Footer
    include includes/footer.pug
    include includes/scripts.pug
