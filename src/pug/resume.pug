doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='Resume of Pankaj Yadav – Senior Software Developer with expertise in .NET, Azure, AI/ML, and modern web development.')
    meta(name='author', content='Pankaj Yadav')
    title Pankaj Yadav - Resume

    // Favicon
    link(rel='icon', type='image/x-icon', href='assets/favicon.ico')

    include includes/css.pug

  body.d-flex.flex-column.h-100.bg-light
    main.flex-shrink-0
      // Navigation
      include includes/navbar.pug

      // Page Content
      .container.px-5.my-5
        .text-center.mb-5
          h1.display-5.fw-bolder.mb-3
            span.text-gradient.d-inline Resume
          a.btn.btn-primary.btn-lg.px-5.py-3(href='assets/Pankaj_Yadav_CV.pdf', target='_blank')
            i.bi.bi-download.me-2
            | Download Resume

        .row.gx-5.justify-content-center
          .col-lg-11.col-xl-9.col-xxl-8

            // ==========================
            // Skills Section
            // ==========================
            section.mb-5
              .card.shadow.border-0.rounded-4
                .card-body.p-5
                  // Core Skills
                  .mb-5
                    .d-flex.align-items-center.mb-4
                      .feature.bg-primary.bg-gradient-primary-to-secondary.text-white.rounded-3.me-3
                        i.bi.bi-tools
                      h3.fw-bolder.mb-0
                        span.text-gradient.d-inline Core Skills & Technologies
                    .row.row-cols-1.row-cols-md-2.mb-4
                      .col
                        ul.list-unstyled
                          li AI-Driven Development, RAG, Vector DB
                          li .NET, C#, ASP.NET Core, ASP.NET MVC, Razor Pages
                          li JavaScript / TypeScript, Angular 19, Kendo UI, AG Grid
                          li EF Core, REST API Development
                      .col
                        ul.list-unstyled
                          li Microsoft Azure (App Services, Functions, Key Vault, Storage)
                          li Azure DevOps (CI/CD), Docker, Git, Azure Repos
                          li Agile (Scrum), Microservices, TDD
                          li SignalR, RabbitMQ

                  // Python & AI Skills
                  .mb-5
                    .d-flex.align-items-center.mb-4
                      .feature.bg-primary.bg-gradient-primary-to-secondary.text-white.rounded-3.me-3
                        i.bi.bi-cpu
                      h3.fw-bolder.mb-0
                        span.text-gradient.d-inline AI, ML & Data Science
                    ul.list-unstyled
                      li Python, Pandas, Matplotlib, SQL
                      li Deep Learning (RNN, CNN, LSTM, GRU)
                      li NLP & LLMs
                      li GenAI (OpenAI, Gemini, Claude)

                  // Languages
                  .mb-0
                    .d-flex.align-items-center.mb-4
                      .feature.bg-primary.bg-gradient-primary-to-secondary.text-white.rounded-3.me-3
                        i.bi.bi-code-slash
                      h3.fw-bolder.mb-0
                        span.text-gradient.d-inline Languages
                    .row.row-cols-1.row-cols-md-3.mb-3
                      .col.mb-4.mb-md-0
                        .d-flex.align-items-center.bg-light.rounded-4.p-3.h-100 C#
                      .col.mb-4.mb-md-0
                        .d-flex.align-items-center.bg-light.rounded-4.p-3.h-100 TypeScript
                      .col
                        .d-flex.align-items-center.bg-light.rounded-4.p-3.h-100 Python
                    .row.row-cols-1.row-cols-md-3
                      .col.mb-4.mb-md-0
                        .d-flex.align-items-center.bg-light.rounded-4.p-3.h-100 SQL
                      .col.mb-4.mb-md-0
                        .d-flex.align-items-center.bg-light.rounded-4.p-3.h-100 JavaScript
                      .col
                        .d-flex.align-items-center.bg-light.rounded-4.p-3.h-100 HTML / CSS

            // ==========================
            // Experience Section
            // ==========================
            section.mb-5
              h2.text-primary.fw-bolder.mb-4 Experience
              
              each exp in experiences
                .card.shadow.border-0.rounded-4.mb-4
                  .card-body.p-5
                    .row.align-items-center.gx-5
                      .col.text-center.text-lg-start.mb-4.mb-lg-0
                        .bg-light.p-4.rounded-4
                          .text-primary.fw-bolder.mb-2 #{exp.date}
                          .small.fw-bolder #{exp.role}
                          .small.text-muted #{exp.company}
                          .small.text-muted #{exp.location}
                      .col-lg-8
                        ul.mb-0
                          each d in exp.desc
                            li= d

            // ==========================
            // Education Section
            // ==========================
            section.mb-5
              h2.text-secondary.fw-bolder.mb-4 Education

              // MSc
              .card.shadow.border-0.rounded-4.mb-4
                .card-body.p-5
                  .row.align-items-center.gx-5
                    .col.text-center.text-lg-start.mb-4.mb-lg-0
                      .bg-light.p-4.rounded-4
                        .text-secondary.fw-bolder.mb-2 2019 – 2021
                        .mb-2
                          .small.fw-bolder University of Hertfordshire
                          .small.text-muted United Kingdom
                        .fst-italic
                          .small.text-muted Master of Science (MS), Data Science and Analytics — Distinction
                    .col-lg-8
                      p.mb-2 Focused on Artificial Intelligence, Data Engineering, Machine Learning, and Advanced Analytics.
                      b Key Skills:
                        |  Python, Pandas, Matplotlib, SQL, Deep Learning, Neural Networks, Agile Project Management

              // BE
              .card.shadow.border-0.rounded-4.mb-4
                .card-body.p-5
                  .row.align-items-center.gx-5
                    .col.text-center.text-lg-start.mb-4.mb-lg-0
                      .bg-light.p-4.rounded-4
                        .text-secondary.fw-bolder.mb-2 2009 – 2013
                        .mb-2
                          .small.fw-bolder University of Mumbai
                          .small.text-muted India
                        .fst-italic
                          .small.text-muted Bachelor of Engineering (BE), Computer Science — First Class
                    .col-lg-8
                      p.mb-2 Specialized in Computer Science fundamentals, algorithms, and system design.
                      b Key Skills:
                        |  SDLC, OOP, DBMS, SQL, Data Structures, Web Technologies (HTML, CSS, JavaScript), Matlab

    // Footer
    include includes/footer.pug
    include includes/scripts.pug
