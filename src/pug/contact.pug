section.py-5.bg-light
  .container.px-5
    .row.justify-content-center
      .col-lg-8
        .card.shadow-lg.rounded-4
          .card-body.p-5
            .text-center.mb-4
              i.bi.bi-envelope-fill.text-primary.fs-1.mb-3
              h1.fw-bold.mb-2 Contact Me
              p.text-muted Let’s collaborate or just say hello. I’ll reply within 24–48 hours.

            form#contactForm(
              method="POST",
              action="https://formspree.io/f/#{formspreeId}"
            )
              // Name
              .form-floating.mb-3
                input#name.form-control(type="text", name="name", placeholder="Your name", required)
                label(for="name") Full Name
              // Email
              .form-floating.mb-3
                input#email.form-control(type="email", name="email", placeholder="name@example.com", required)
                label(for="email") Email Address
              // Phone
              .form-floating.mb-3
                input#phone.form-control(type="tel", name="phone", placeholder="(123) 456-7890")
                label(for="phone") Phone Number (optional)
              // Message
              .form-floating.mb-3
                textarea#message.form-control(name="message", placeholder="Write your message here...", style="height: 10rem;", required)
                label(for="message") Message

              // Success & Error Messages
              #submitSuccessMessage.d-none.text-success.mt-3
                p.mb-0 ✅ Message sent successfully! I’ll be in touch.
              #submitErrorMessage.d-none.text-danger.mt-3
                p.mb-0 ❌ Something went wrong. Please try again.

              // Submit Button
              .d-grid.mt-4
                button#submitButton.btn.btn-primary.btn-lg(type="submit") Send Message
