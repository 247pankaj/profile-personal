doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='Pankaj Yadav - Full-Stack Developer specializing in .NET, Angular, Azure, Microservices, and AI Solutions.')
    meta(name='author', content='Pankaj Yadav')
    title Pankaj Yadav - Full-Stack Developer | AI & Cloud Solutions

    // Favicon
    link(rel='icon', type='image/x-icon', href='assets/favicon.ico')

    include includes/css.pug

  body.d-flex.flex-column.h-100
    main.flex-shrink-0

      // ===== NAVIGATION =====
      include includes/navbar.pug

      // ===== HEADER =====
      header.py-5
        .container.px-5.pb-5
          .row.gx-5.align-items-center
            .col-xxl-6
              .text-center.text-xxl-start
                h1.display-3.fw-bolder.mb-4
                  span.text-gradient.d-inline Pankaj Yadav 
                  small.text-muted.ms-2
                p.fs-4.fw-light.text-muted.mb-4 
                  strong Full-Stack Developer with 10+ years of experience in .NET, Angular, Azure, Microservices, and AI-powered software solutions.
                .d-grid.gap-3.d-sm-flex.justify-content-sm-center.justify-content-xxl-start
                  a.btn.btn-primary.btn-lg.px-5.py-3.me-sm-3.fs-6.fw-bolder(href='resume.html') View Resume
                  a.btn.btn-outline-dark.btn-lg.px-5.py-3.fs-6.fw-bolder(href='projects.html') Explore Projects
            .col-xxl-6
              .d-flex.justify-content-center.mt-5.mt-xxl-0
                .profile.bg-gradient-primary-to-secondary
                  img.profile-img(src='assets/profile.jpg', alt='Pankaj Yadav - Full-Stack Developer')
                  .dots-1
                    include includes/svg-dots.pug
                  .dots-2
                    include includes/svg-dots.pug
                  .dots-3
                    include includes/svg-dots.pug
                  .dots-4
                    include includes/svg-dots.pug

      // ===== ABOUT SECTION =====
      section.bg-light.py-5
        .container.px-5
          .row.gx-5.justify-content-center
            .col-xxl-9
              .text-center.my-5
                h2.display-5.fw-bolder
                  span.text-gradient.d-inline About Me
                p.lead.fw-light.mb-4 
                  | I am Pankaj, a Full-Stack Developer passionate about creating 
                  | scalable, AI-driven applications that deliver measurable business impact. 
                p.lead.fw-light.mb-4 
                  | With over a decade of experience in building enterprise-grade systems using 
                  | .NET Core, Angular, and Microsoft Azure, I thrive on tackling complex technical challenges, 
                  | from microservices architecture to real-time event-driven platforms. 
                  | My expertise includes AI integrations, data-driven solutions, and end-to-end cloud deployments.
                // Social Links
                .d-flex.justify-content-center.fs-2.gap-4
                  a.text-gradient(href="https://x.com/247pankaj", target="_blank") 
                    i.bi.bi-twitter
                  a.text-gradient(href="https://www.linkedin.com/in/pankaj247/", target="_blank") 
                    i.bi.bi-linkedin
                  a.text-gradient(href="https://github.com/247pankaj", target="_blank") 
                    i.bi.bi-github


    // ===== FOOTER =====
    include includes/footer.pug

    include includes/scripts.pug
